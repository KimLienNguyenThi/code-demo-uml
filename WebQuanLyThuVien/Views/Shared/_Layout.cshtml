<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top px-4 px-lg-5 py-lg-0">
            <a href="index.html" class="navbar-brand">
                <h1 class="m-0 text-primary"><i class="fa fa-book-reader me-3"></i>Thư viện</h1>
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    @if (ViewBag.active == 1)
                    {
                        <a href="~/home" class="nav-item nav-link active">Trang chủ</a>
                    }
                    else
                    {
                        <a href="~/home" class="nav-item nav-link ">Trang chủ</a>
                    }

                    @if (ViewBag.active == 2)
                    {
                        <a href="~/about" class="nav-item nav-link active">Giới thiệu</a>
                    }
                    else
                    {
                        <a href="~/about" class="nav-item nav-link">Giới thiệu</a>
                    }

                    @if (ViewBag.active == 3)
                    {
                        <a href="~/classes" class="nav-item nav-link active">Sách</a>
                    }
                    else
                    {
                        <a href="~/classes" class="nav-item nav-link">Sách</a>
                    }

                    @if (ViewBag.active == 4)
                    {
                        <a href="~/thuesach" class="nav-item nav-link active">Thuê sách</a>
                    }
                    else
                    {
                        <a href="~/thuesach" class="nav-item nav-link">Thuê sách</a>
                    }


                    @if (ViewBag.active == 5)
                    {
                        <a href="~/contact" class="nav-item nav-link active">Liên hệ</a>
                    }
                    else
                    {
                        <a href="~/contact" class="nav-item nav-link">Liên hệ</a>
                    }
                </div>

                @{
                    var user = WebQuanLyThuVien.App_Start.SessionConfig.GetUser();
                }

                @if (user != null)
                {
                    //// lấy tên độc giả sau khi đăng nhập
                    //WebQuanLyThuVien.Models.QuanLyThuVienEntities db = new WebQuanLyThuVien.Models.QuanLyThuVienEntities();
                    //var tenDG = db.DocGias.Find(user.MaDG);

                    <a href="~/ThueSach/GioHang" class="btn btn-primary rounded-pill px-3 d-none d-lg-block">Giỏ hàng</a>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">@user.HoTen</a>
                        <div class="dropdown-menu rounded-0 rounded-bottom border-0 shadow-sm m-0">
                            <a href="~/User/History" class="dropdown-item">Lịch sử</a>
                            <a href="~/User/Logout" class="dropdown-item">Logout</a>
                        </div>
                    </div>
                }
                @if (user == null)
                {
                    <a href="~/User/Index" class="btn btn-primary rounded-pill px-3 d-none d-lg-block">Đăng nhập ngay<i class="fa fa-arrow-right ms-3"></i></a>
                }

            </div>
        </nav>
        <!-- Navbar End -->

        @RenderBody()

        <!-- Footer Start -->
        <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-3 col-md-6">
                        <h3 class="text-white mb-4">Get In Touch</h3>
